  <servlet>
    <servlet-name>authentification</servlet-name>
    <servlet-class>fr.orsys.biblio.servlet.AuthentificationServlet</servlet-class>
    <init-param>
      <param-name>userFile</param-name>
      <param-value>/WEB-INF/users.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>authentification</servlet-name>
    <url-pattern>/authentification/login</url-pattern>
    <url-pattern>/authentification/validation</url-pattern>
    <url-pattern>/authentification/logout</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>0</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <!-- Configuration de Spring MVC  -->
  <context-param>
	<param-name>contextConfigLocation</param-name>
	<param-value>classpath:/spring.xml</param-value>
	</context-param>
	<listener> <listener-class>
		org.springframework.web.context.ContextLoaderListener
	</listener-class> </listener>
  
  <servlet>
	<servlet-name>spring-mvc</servlet-name>
	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	<init-param>
       <param-name>contextConfigLocation</param-name>
       <param-value>
           /WEB-INF/spring-mvc.xml
       </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
   </servlet>
   <servlet-mapping>
	 <servlet-name>spring-mvc</servlet-name>
	 <url-pattern>/spring/*</url-pattern>
    </servlet-mapping>
</web-app>